/* pages/meeting/meetingInfo/index.wxss */
.meeting-box{
    display: flex;
    padding: 20rpx 0 0 10rpx;
}
.meeting-img{
    width: 200rpx;
    height: 200rpx;
    margin: 15rpx;
}
.meeting-info text{
    display: block;
    line-height: 55rpx;
    padding-left: 20rpx;
    font-size: 24rpx;
    padding-top:3rpx;
}

.picker{
    width: 700rpx;
    margin: 20rpx auto 0;
    text-align: center;
    line-height: 60rpx;
    border: 1px solid #ccc;
}

.select-box{
    width: 700rpx;
    margin: 0 auto;
    border: 1px solid #ccc;
    overflow: hiddren;
}

.meeting-name{
    font-size: 30rpx;
    text-align: center;
    line-height: 600rpx;
    position: absolute;
    width: 200rpx;
    left: -200rpx;
}

.time-select{
    width: 500rpx;
    position: relative;
    left: 200rpx;
    border-left: 1px solid #ccc;
}

.select-list{
    width: 100%;
    display: flex;
    flex-wrap:wrap;
}
.select-list text{
    width:250rpx;
    line-height:60rpx;
    height:60rpx;
    border-right:1px solid #ccc;
    box-sizing:border-box;
    border-bottom:1px solid #ccc;
    font-size:24rpx;
    text-align: center;
}

.select-list text.active{
    background: #ccc;
    color: #999;
}